@using BlazorSmack.Components
@page "/"

<h1>Blazor Smack</h1>
<div class="info-container">
    <h2>Score: @score</h2>
    <h2>Time Remaining: @currentTime</h2>
    <h2> @message</h2>
</div>

<div class="board">
    
    @foreach(var s in Squares)
    {
        <Square SquareModel ="s"/> 
    }
</div>